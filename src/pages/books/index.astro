        "headline": "Book Summaries",
        "description": "${enhancedDescription}",
        "url": "${new URL('/books', Astro.site).toString()}",
        "mainEntity": {
          "@type": "ItemList",
          "itemListElement": [
            ${posts.slice(0, 10).map((post, index) => `{
              "@type": "ListItem",
              "position": ${index + 1},
              "url": "${new URL(`/books/${post.id}/`, Astro.site).toString()}",
