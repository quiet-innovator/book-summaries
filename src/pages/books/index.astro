        fill: #e0b13b;
        stroke: #e0b13b;
      }
      .rating-display {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.5rem;
      }
      .stars {
        color: #f0c14b;
        margin-right: 0.3rem;
        cursor: pointer;
      }
      .star {
        cursor: pointer;
        display: inline-block;
