---
import BaseHead from "../../components/BaseHead.astro";

const siteTitle = "MinuteReads";
const siteDescription = "Discover powerful book summaries in minutes. Curated insights from top nonfiction and fiction books â€” fast, free, and beautiful.";
---

<html lang="en">
  <head>
    <BaseHead title={siteTitle} description={siteDescription} />
    <style>
      .hero {
        background-image: url('/hero-books.jpg'); /* ðŸ‘ˆ Add this image to your /public folder */
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 2rem;
      }

      .hero h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
      }

      .hero p {
