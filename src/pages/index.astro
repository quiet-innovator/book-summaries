        max-width: 600px;
        margin-bottom: 2rem;
      }

      .cta-button {
        background-color: #0070f3;
        color: white;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        transition: background-color 0.2s ease-in-out;
      }

      .cta-button:hover {
        background-color: #0059c9;
      }

      @media (max-width: 768px) {
        .hero h1 {
          font-size: 2rem;
        }

        .hero p {
          font-size: 1rem;
        }
      }
    </style>
