---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2>
      <a href="/" style="display: flex; align-items: center; gap: 0.5rem;">
        <img
          src="/favicon-final.svg"
          alt="Minute Reads Logo"
          width="28"
          height="28"
          style="margin-bottom: 2px;"
        />
        {SITE_TITLE}
      </a>
    </h2>

    <div class="internal-links">
      <HeaderLink href="/">Books</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <button id="theme-toggle" title="Toggle dark mode" aria-label="Toggle dark mode">ðŸŒ“</button>
    </div>

    <div class="social-links">
      <a href="#" onclick="copySiteLink()" title="Copy Site Link">
        <img src="https://api.iconify.design/lucide/link.svg" alt="Copy link" />
      </a>
      <a href="https://twitter.com/minutereads" target="_blank" title="Twitter">
        <img src="https://api.iconify.design/lucide/twitter.svg" alt="Twitter" />
      </a>
      <a href="https://www.linkedin.com" target="_blank" title="LinkedIn">
        <img src="https://api.iconify.design/lucide/linkedin.svg" alt="LinkedIn" />
      </a>
      <a href="https://youtube.com" target="_blank" title="YouTube">
        <img src="https://api.iconify.design/lucide/youtube.svg" alt="YouTube" />
      </a>
      <a href="https://bsky.app" target="_blank" title="Bluesky">
        <img src="https://api.iconify.design/lucide/send.svg" alt="Bluesky" />
      </a>
      <a href="https://pinterest.com" target="_blank" title="Pinterest">
        <img src="https://api.iconify.design/lucide/pin.svg" alt="Pinterest" />
      </a>
      <a href="https://facebook.com" target="_blank" title="Facebook">
        <img src="https://api.iconify.design/lucide/facebook.svg" alt="Facebook" />
      </a>
      <a href="https://instagram.com" target="_blank" title="Instagram">
        <img src="https://api.iconify.design/lucide/instagram.svg" alt="Instagram" />
      </a>
    </div>
  </nav>
</header>

<!-- Copy Toast -->
<div id="copy-toast">ðŸ”— Link copied!</div>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
    font-weight: 600;
    font-size: 1.25rem;
    color: var(--black);
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: var(--accent);
  }
  .internal-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .social-links img {
    width: 20px;
    height: 20px;
  }
  #theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.3rem;
    padding: 0.25rem;
  }
  #copy-toast {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: #333;
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    font-size: 0.9rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 9999;
  }
  #copy-toast.show {
    opacity: 1;
  }

  /* Dark mode styles */
  body.dark header {
    background: #121212;
  }
  body.dark h2 a,
  body.dark nav a,
  body.dark .internal-links a {
    color: white;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>

<script is:inline>
  const root = document.body;
  const savedTheme = localStorage.getItem("theme");
  if (savedTheme === "dark") root.classList.add("dark");

  document.getElementById("theme-toggle")?.addEventListener("click", () => {
    root.classList.toggle("dark");
    const mode = root.classList.contains("dark") ? "dark" : "light";
    localStorage.setItem("theme", mode);
  });

  window.copySiteLink = function () {
    navigator.clipboard.writeText(window.location.origin);
    const toast = document.getElementById("copy-toast");
    toast.classList.add("show");
    setTimeout(() => toast.classList.remove("show"), 2000);
  };
</script>